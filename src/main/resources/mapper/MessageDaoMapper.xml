<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.MessageDao">

    <!--insert-->
    <insert id="insert" parameterType="Message">
        insert into message(title,sender_id,reciever_id,date,readed,content)values(#{title},#{sender_id},#{receiver_id},current_timestamp,false,#{content})
    </insert>

    <!--select-->
    <select id="select" parameterType="Message" resultType="Message">
        select * from message where message_id=#{message_id}
    </select>

</mapper>